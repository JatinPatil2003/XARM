  "runArgs": [
    "--gpus=all",
    "--volume=/tmp/.X11-unix:/tmp/.X11-unix",
    "--volume=/home/jatin/.Xauthority:/root/.Xauthority",
    "--env", "QT_X11_NO_MITSHM=1",
    "--env", "XDG_RUNTIME_DIR=/tmp/runtime-docker",
    "--env", "DISPLAY=${env:DISPLAY}",
    "--ipc=host",
    "--network=host",
    "--privileged"
  ],
  "workspaceFolder": "/home/ubuntu/XARM",
  "mounts": [
    "source=${localWorkspaceFolder},target=/home/ubuntu/XARM,type=bind"
  ],
  "onCreateCommand": "./.devcontainer/create.sh",
  "updateContentCommand": "./.devcontainer/update_content.sh",
  "postCreateCommand": "./.devcontainer/post_create.sh"
}




